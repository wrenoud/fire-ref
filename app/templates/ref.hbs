<div class="container-fluid" {{bind-attr class="isDirty"}}>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-4">
					<button {{action 'preview'}}>Preview</button>
				</div>
				<div class="col-md-8 text-right">
					{{#if isDirty}}
						<button {{action 'cancel'}}>Undo</button>
						<button {{action 'save'}}>Save</button>
					{{/if}}
				</div>
			</div>
			<div class="form-group">
			    <label>Title</label>
			    {{input type="text" class="form-control" value=title}}
			</div>
			<div class="form-group">
			    <label>Authors</label>
			    {{input type="text" class="form-control" value=author}}
			</div>
			<div class="form-group">
			    <label>Year</label>
			    {{input type="text" class="form-control" value=year}}
			</div>
			<div class="form-group">
			    <label>Publisher</label>
			    {{input type="text" class="form-control" value=publisher}}
			</div>
			<div class="form-group">
			    <label>Url</label>
			    {{input type="text" class="form-control" value=url}}
			</div>
			<div class="form-group">
			    <label>BibTex Tag</label>
			    {{input type="text" class="form-control" value=id}}
			</div>
			<div class="form-group">
			    <label>BibTeX</label>
			    {{textarea class="form-control" rows="6" value=pretty_bibtex}}
			</div>
		</div>
	</div>
</div>
