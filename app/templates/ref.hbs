<div class="container-fluid" {{bind-attr class="isDirty"}}>
	<div class="row">
		<div class="col-md-12">
			<div class="row">
				<div class="col-md-6">
				
					<a class="btn btn-default" target="_blank" {{bind-attr href=preview}}>Open in Tab</a>
					<a class="btn btn-default" target="_blank" {{bind-attr href=googleScholar}}>Search</a>
				</div>
				<div class="col-md-6 text-right">
					{{#if isDirty}}
						<button class="btn btn-default" {{action 'cancel'}}>Undo</button>
						<button class="btn btn-default" {{action 'save'}}>Save</button>
					{{/if}}
				</div>
			</div>

			<div class="form-horizontal">
				<div class="form-group">
				    <label class="col-sm-3 control-label">Type</label>
					<div class="col-sm-9">
					{{view Ember.Select
					  contentBinding="entrytypes"
					  optionLabelPath="content.id"
					  optionValuePath="content.id"
					  selectionBinding="type"
					  class="form-control"
					}}</div>
				</div>
				<div class="form-group">
				    <label class="col-sm-3 control-label">Label</label>
				    <div class="col-sm-9">{{input type="text" class="form-control" value=label}}</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label">Title</label>
				    <div class="col-sm-9">{{input type="text" class="form-control" value=title}}</div>
				</div>
				<div class="form-group">
				    <label class="col-sm-3 control-label">Authors</label>
				    <div class="col-sm-9">{{input type="text" class="form-control" value=author}}</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label">Journal</label>
				    <div class="col-sm-9">{{input type="text" class="form-control" value=journal}}</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-3"></div>
				<div class="col-md-3">
					<div class="form-group">
					    {{input type="text" class="form-control" value=year placeholder="Year"}}
					</div>
				</div>
				<div class="col-md-3">
					<div class="form-group">
					    {{input type="text" class="form-control" value=volume placeholder="Volume"}}
					</div>
				</div>
				<div class="col-md-3">
					<div class="form-group">
					    {{input type="text" class="form-control" value=number placeholder="Number"}}
					</div>
				</div>
			</div>
			<div class="form-horizontal">
				<div class="form-group">
					<label class="col-sm-3 control-label">Publisher</label>
				    <div class="col-sm-9">{{input type="text" class="form-control" value=publisher}}</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label">URL</label>
				    <div class="col-sm-9">{{input type="text" class="form-control" value=url}}</div>
				</div>
				<div class="form-group">
					<label class="col-sm-3 control-label">DOI</label>
				    <div class="col-sm-9">{{input type="text" class="form-control" value=doi}}</div>
				</div>
			</div>
		</div>
		<div class="form-group">
		    <label>Suggested Filename</label>
		    {{input type="text" class="form-control" value=pretty_filename}}
		</div>
		<div class="form-group">
		    <label>BibTeX</label>
		    {{textarea class="form-control" rows="6" value=pretty_bibtex}}
		</div>
	</div>
</div>
